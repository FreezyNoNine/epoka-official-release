<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logocomplet"
        android:layout_centerHorizontal="true"/>

    <!-- Titre -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouvelle mission"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_below="@id/logoImageView"
        android:layout_centerHorizontal="true" />

    <!-- Champ de saisie pour la date de début -->
    <EditText
        android:id="@+id/startDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Date de début"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="date" />

    <!-- Champ de saisie pour la date de fin -->
    <EditText
        android:id="@+id/endDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startDateEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Date de fin"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="date" />

    <!-- Lieu (Liste déroulante) -->
    <Spinner
        android:id="@+id/locationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/endDateEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"/>

    <!-- Bouton pour envoyer la mission -->
    <Button
        android:id="@+id/sendMissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer"
        android:layout_below="@id/locationSpinner"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
