<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logocomplet"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <!-- Message de bienvenue avec nom et prénom -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue, [Prénom] [Nom]"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <!-- Bouton pour ajouter une mission -->
    <Button
        android:id="@+id/addMissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter une mission"
        android:layout_below="@id/welcomeTextView"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"/>

    <!-- Bouton pour se déconnecter -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se déconnecter"
        android:layout_below="@id/addMissionButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
